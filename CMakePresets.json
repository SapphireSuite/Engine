{
	"version": 3,
	"configurePresets": [
		{
			"name": "Base",
			"hidden": true,
			"binaryDir": "${sourceDir}/CMake/build/${presetName}",
			"cacheVariables": {
				"CMAKE_INSTALL_PREFIX": "${sourceDir}/CMake/install/${presetName}",
				"SA_ENGINE_BUILD_TESTS_OPT": true
			}
		},
		{
			"name": "Clang",
			"inherits": "Base",
			"generator": "Ninja Multi-Config",
			"cacheVariables": {
				"CMAKE_C_COMPILER": "clang$env{clang_compiler_v}",
				"CMAKE_CXX_COMPILER": "clang++$env{clang_compiler_v}"
			},
			"description": "Compilers: C=clang, CXX=clang++"
		},
		{
			"name": "GCC",
			"inherits": "Base",
			"generator": "Ninja Multi-Config",
			"cacheVariables": {
				"CMAKE_C_COMPILER": "gcc$env{gcc_compiler_v}",
				"CMAKE_CXX_COMPILER": "g++$env{gcc_compiler_v}"
			},
			"description": "Compilers: C=gcc, CXX=g++"
		},
		{
			"name": "Windows",
			"hidden": true,
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Windows"
			}
		},
		{
			"name": "Visual Studio",
			"hidden": true,
			"inherits": [
				"Windows",
				"Base"
			],
			"architecture": "x64"
		},
		{
			"name": "VS_2017",
			"inherits": "Visual Studio",
			"displayName": "Visual Studio 2017",
			"description": "MSVC Compiler",
			"generator": "Visual Studio 15 2017"
		},
		{
			"name": "VS_2019",
			"inherits": "Visual Studio",
			"displayName": "Visual Studio 2019",
			"description": "MSVC Compiler",
			"generator": "Visual Studio 16 2019"
		},
		{
			"name": "VS_2022",
			"inherits": "Visual Studio",
			"displayName": "Visual Studio 2022",
			"description": "MSVC Compiler",
			"generator": "Visual Studio 17 2022"
		},
		{
			"name": "VS_ClangCL",
			"inherits": "Visual Studio",
			"displayName": "ClangCL Visual Studio 2022",
			"description": "Clang CL Compiler with Visual Studio",
			"generator": "Visual Studio 17 2022",
			"toolset": "ClangCL",
			"vendor": {
				"microsoft.com/VisualStudioSettings/CMake/1.0": {
					"intelliSenseMode": "windows-clang-x64"
				}
			}
		},
		{
			"name": "MacOS",
			"hidden": true,
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Darwin"
			}
		},
		{
			"name": "Xcode",
			"inherits": [
				"MacOS",
				"Base"
			],
			"generator": "Xcode"
		}
	],
	"buildPresets": [
		{
			"name": "Base",
			"hidden": true,
			"verbose": true
		},
		{
			"name": "Debug",
			"hidden": true,
